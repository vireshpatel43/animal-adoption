<!-- pet-listing.ejs -->
<div class="pet-listing">
    <h3><%= pet.type %></h3>
    <ul>
        <li><strong>Age:</strong> <%= pet.age %></li>
        <li><strong>Breed:</strong> <%= pet.breed %></li>
        <li><strong>Gender:</strong> <%= pet.gender %></li>
        <li><strong>Gets Along With:</strong> <%= pet.getsAlongWith %></li>
        <li><strong>More Information:</strong> <%= pet.morePetInfo %></li>
        <li><strong>Owner Name:</strong> <%= pet.ownerName %></li>
        <li><strong>Owner Email:</strong> <%= pet.ownerEmail %></li>
    </ul>
</div>